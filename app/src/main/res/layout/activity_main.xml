<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="412dp"
        android:layout_height="733dp"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/manual"
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:background="#D9F4FA"
            android:gravity="center"
            android:hint="Перед нажатием кнопки &quot;старт&quot; или &quot;время вспять&quot; нажмите кнопку &quot;пауза&quot;."
            android:padding="10dp"
            android:textColor="#008ACA"
            android:textColorHint="#7FB0C6"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonTimeBack" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="370dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="СЕКУНДОМЕР"
            android:textColor="#02050B"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stopwatchOut"
            android:layout_width="370dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:background="#D9F4FA"
            android:gravity="center"
            android:hint="Поле отсчёта секунд"
            android:padding="10dp"
            android:textColor="#008ACA"
            android:textColorHint="#7FB0C6"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/buttonTimeBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="25dp"
            android:text="ВРЕМЯ ВСПЯТЬ"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stopwatchOut">

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="19dp"
                android:padding="25dp"
                android:text="СТАРТ"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="ПАУЗА"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:padding="25dp"
                android:text="СТОП"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>